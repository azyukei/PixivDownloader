{
  "name": "Pixiv Downloader",
  "description": "This extension help you download image from pixiv.",
  "version": "0.1",

  "options_page": "options.html",

  "background": {
    "persistent": false,
    "scripts": ["jquery-2.2.0.min.js", "download.js"]
  },

  "content_scripts": [{
    "matches": ["http://www.pixiv.net/*"],
    "js": ["jquery-2.2.0.min.js", "circle-progress.js", "content_functions.js", "content_script.js"],
    "css": ["content_style.css"],
    "all_frames": true,
    "run_at": "document_end"
  }],

  "permissions": [
    "downloads",
    "*://*.pixiv.net/*"
  ],

  "manifest_version": 2
}
