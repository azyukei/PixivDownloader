{
    "name": "Pixiv Downloader",
    "description": "This extension help you download image from pixiv.",
    "version": "0.1",

    "options_page": "options.html",

    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "Pixiv Downloader",
        "default_popup": "popup.html"
    },

    "background": {
        "persistent": false,
        "scripts": ["download.js"]
    },

    "content_scripts": [{
        "matches": ["http://www.pixiv.net/*"],
        "js": ["jquery-2.2.0.min.js", "content_functions.js", "content_script.js"],
        "css": ["content_style.css"],
        "all_frames": true,
        "run_at": "document_end"
    }],

    "permissions": [
        "downloads",
        "*://*.pixiv.net/*"
    ],

    "manifest_version": 2
}
