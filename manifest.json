{
  "name": "Pixiv Downloader",
  "description": "This extension help you download image from pixiv.",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "19": "image/icon19.png",
      "38": "image/icon38.png"
    },
    "default_title": "Pixiv Downloader"
  },

  "content_scripts": [
    {
      "matches": ["http://www.pixiv.net/*"],
      "js": ["contentscript.js"]
    }
  ],

  "permissions": [
    "declarativeContent"
  ],

  "manifest_version": 2
}